<UserControl x:Class="MsPathViewer.Views.XicView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:oxy="http://oxyplot.codeplex.com"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60*" />
            <RowDefinition Height="1" />
            <RowDefinition Height="40*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <oxy:Plot Name="FragmentIonXic" Grid.Row="0" Model="{Binding Path=FragmentPlotModel}">
            <oxy:Plot.InputBindings>
                <MouseBinding Command="{Binding Path=SelectFragmentScanNumberCommand}" MouseAction="LeftDoubleClick" />
            </oxy:Plot.InputBindings>
        </oxy:Plot>
        <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" ShowsPreview="True" />
        <oxy:Plot Name="PrecursorIonXic" Grid.Row="2" Model="{Binding Path=PrecursorPlotModel}"/>
        <CheckBox Grid.Row="3" IsChecked="{Binding ShowScanMarkers}">Show Scan Markers</CheckBox>
    </Grid>
</UserControl>
