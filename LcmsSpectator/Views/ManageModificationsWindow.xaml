<Window x:Class="LcmsSpectator.Views.ManageModificationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ManageModificationsWindow" Height="300" Width="300">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*" />
            <ColumnDefinition Width="33*" />
            <ColumnDefinition Width="33*" />
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <!--<RowDefinition Height="25" /> -->
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
            <RowDefinition Height="10" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        
        <!--<TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" /> -->
        
        <ListBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" />

        <Button Grid.Row="1" Grid.Column="0" Margin="0,2,2,2">Add</Button>
        <Button Grid.Row="1" Grid.Column="1" Margin="2">Edit</Button>
        <Button Grid.Row="1" Grid.Column="2" Margin="2,2,0,2">Delete</Button>

        <Button x:Name="ButtonClose" Content="Cancel" IsCancel="True" Grid.Row="3" Grid.Column="1" Margin="2" />
        <Button x:Name="ButtonOk" Content="Save" IsDefault="True" Grid.Row="3" Grid.Column="2" Margin="2,2,0,2" />
    </Grid>
</Window>
